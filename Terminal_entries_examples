# Mine some coins
curl -X POST -H "Content-Type: application/json" -d "{\"miner\": \"Adi\"}" http://127.0.0.1:5003/mine
curl -X POST -H "Content-Type: application/json" -d "{\"miner\": \"Michele\"}" http://127.0.0.1:5005/mine


# Register two nodes with each other
curl -X POST -H "Content-Type: application/json" -d "{\"node_address\": \"http://127.0.0.1:5005\"}" http://127.0.0.1:5003/register_other_node
curl -X POST -H "Content-Type: application/json" -d "{\"node_address\": \"http://127.0.0.1:5003\"}" http://127.0.0.1:5005/register_other_node

# Form consensus with all nodes in peer network
curl -X GET http://127.0.0.1:5005/consensus
curl -X GET http://127.0.0.1:5003/consensus

# Create transaction
curl -X POST -H "Content-Type: application/json" -d "{\"from\": \"Michele\", \"to\": \"Adi\", \"amount\": 5}" http://127.0.0.1:5005/add_transaction
curl -X POST -H "Content-Type: application/json" -d "{\"miner\": \"Michele\"}" http://127.0.0.1:5005/mine
curl -X POST -H "Content-Type: application/json" -d "{\"miner\": \"Adi\"}" http://127.0.0.1:5003/mine

# Show all existing blocks
curl -X GET http://127.0.0.1:5003/blocks
curl -X GET http://127.0.0.1:5005/blocks
